{
    "git": {
        "requireBranch": "master",
        "commitMessage": "chore: release ${version}"
    },
    "github": {
        "release": true
    },
    "npm": {
        "publish": true
    },
    "hooks": {
        "before:init": ["git pull"]
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md"
        }
    }
}
